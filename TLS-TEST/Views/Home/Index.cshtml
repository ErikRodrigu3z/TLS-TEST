}

<div class="text-center">
    <h1 class="display-4">SSL TEST</h1>    
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <input type="text" id="search" name="search" value="" placeholder="" style="width:100%;" />
        </div>
        <div class="col-md-4">
            <button class="btn btn-primary" onclick="test();" style="width:100%;">Analizar</button>
        </div>
    </div>

    <pre class="prettyprint linenums ">
       @ViewBag.ssl
    </pre>
</div>

<script>
    function test() {
        var url = document.getElementById('search').value;
            fetch('/Home/Test?url=' + url)            
                .then(data => console.log(data))
            .catch(err => console.log(err));

        fetch('flores.jpg').then(function (response) {
            if (response.ok) {
                response.blob().then(function (miBlob) {
                    var objectURL = URL.createObjectURL(miBlob);
                    miImagen.src = objectURL;
                });
            } else {
                console.log('Respuesta de red OK pero respuesta HTTP no OK');
            }
        })
            .catch(function (error) {
